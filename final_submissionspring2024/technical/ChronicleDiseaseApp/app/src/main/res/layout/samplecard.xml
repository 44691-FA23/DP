<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#49e896"
    app:cardCornerRadius="25sp"
    android:layout_margin="10sp"
    tools:ignore="ContentDescription,HardcodedText"
    android:layout_height="250sp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:padding="10sp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/details2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skin Cancer\n detection"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImageView3"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:background="#11000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details2"
        app:layout_constraintVertical_bias="0.925"
        app:shapeAppearance="@style/circle2" />

    <ImageView
        android:id="@+id/images"
        android:layout_width="wrap_content"
        android:paddingStart="20sp"
        android:paddingTop="20sp"
        android:layout_height="137dp"
        android:contentDescription="TODO"
        android:src="@drawable/heartanatomy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details2"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>