<resources>
    <string name="app_name">ChronicleDisease</string>

    <style name="inputlay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">25sp</item>
        <item name="boxCornerRadiusBottomStart">25sp</item>
        <item name="boxCornerRadiusTopEnd">25sp</item>
        <item name="boxCornerRadiusTopStart">25sp</item>
        <item name="boxStrokeWidth">0sp</item>
        <item name="boxStrokeWidthFocused">0sp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="edit">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:lines">1</item>
        <item name="android:background">@drawable/shaper</item>
        <item name="android:drawablePadding">25sp</item>
        <item name="android:drawableTint">@color/textColor</item>
        <item name="android:textColorHint">@color/textColor</item>
    </style>

    <style name="btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/shaper</item>
        <item name="android:paddingStart">20sp</item>
        <item name="android:paddingEnd">20sp</item>
    </style>
</resources>